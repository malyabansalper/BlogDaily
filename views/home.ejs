<%- include("partials/header"); -%>

<h1>Home</h1>
<p><%= startingContent %></p>

<% posts.forEach(function(post){ %>

<div class="card">
  <h3 class="card-header"><%=post.title%></h3>
  <hr class="mainPageHr" />
  <p class="card-text">
    <%=post.content.substring(0, 100) + " ..."%>
    <a href="/posts/<%=post._id%>">Read More</a>
  </p>
</div>

<% }) %> <%- include("partials/footer"); -%>
